<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.theb2tech.rpg_battle.chooseImage">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageOne"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/csgo"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageTwo"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/dahero"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageThree"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/hasprai"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageFour"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/mage"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageFive"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/pimpi"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageSix"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/priest"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageSeven"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/range"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:adjustViewBounds="true"/>
    </GridLayout>
</RelativeLayout>
